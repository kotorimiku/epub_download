{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "epub_download",
  "version": "1.4.6",
  "identifier": "com.epub.download.app",
  "build": {
    "beforeDevCommand": "bun dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "epub_download",
        "width": 750,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/logo.png",
      "icons/logo.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "languages": [
          "SimpChinese"
        ]
      }
    }
  }
}
